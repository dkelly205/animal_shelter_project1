<h2>Adoptions</h2>

<ul>
  <% for adoption in @adoptions %>
  <li>
  <p><%= adoption.customer.full_name %> has adopted <%= adoption.animal.name %> </p>
  <form method="post" action="/adoptions/<%= adoption.id %>/delete">
    <input class="form_button" type="submit" value="Delete Adoption"/>
  </form>
  </li>
  <% end %>
</ul>



<a class="button" href="/adoptions/new">Create Adoption</a>
