<form class="details" action="/animals/<%= @animal.id %>" method="post">

<p>
  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="<%= @animal.name %>" />
</p>
<p>
  <label for="type">Type:</label>
  <input type="text" name="type" id="type" value="<%= @animal.type %>" />
</p>
<p>
  <label for="breed">Breed:</label>
  <input type="text" name="breed" id="breed" value="<%= @animal.breed %>" />
</p>
<p>
  <label for="image">Image:</label>
  <input type="text" name="image" id="image" value="<%= @animal.image %>" />
</p>
<p>
  <label for="gender">Gender:</label>
  <select name="gender" id="gender" />
  <option value="male">male</option>
  <option value="female">female</option>
  </select>
</p>
<p>
  <label for="health">Health:</label>
  <input type="number" name="health" id="health" value="<%= @animal.health %>" />
</p>
<p>
  <label for="adoptable">Adoptable:</label>
  <select name="adoptable" id="adoptable" />
  <option value="true">true</option>
  <option value="false">false</option>
  </select>
</p>
<p>
  <label for="admission_date">Admission Date:</label>
  <input type="date" name="admission_date" id="admission_date" value="<%= @animal.admission_date %>" />
</p>
<p>
  <label for="age">Age:</label>
  <input type="number" name="age" id="age" value="<%= @animal.age %>" />
</p>
  <input class="form_button" type="submit" value="Update Animals Details">


</form>
