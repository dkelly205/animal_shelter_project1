<main>
<h2>Customers</h2>


<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Phone Number</th>
  </tr>
<% @customers.each do |customer| %>
<tr>
<td><%= customer.full_name() %> </td>
<td><%= customer.address() %> </td>
<td><%= customer.phone_number %> </td>
<td><%= customer.id %> </td>
<td><form method="get" action="/customers/<%= customer.id %>/edit">
  <input type="submit" value="Edit Customer"/>
</form></td>
<td><form method="post" action="/customers/<%= customer.id %>/delete">
  <input type="submit" value="Remove Customer"/>
</form></td>
</tr>
<% end %>
</table>


<a class="button" href="/customers/new">Add Customer</a>
