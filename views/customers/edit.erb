<form class="details" action="/customers/<%= @customer.id %>" method="post">
<p>
  <label for="first_name">First_Name:</label>
  <input type="text" name="first_name" id="first_name" value="<%= @customer.first_name %>" />
</p>
<p>
  <label for="last_name">Last_Name:</label>
  <input type="text" name="last_name" id="last_name" value="<%= @customer.last_name %>" />
</p>
<p>
  <label for="address">Address:</label>
  <input type="text" name="address" id="address" value="<%= @customer.address %>" />
</p>
<p>
  <label for="phone_number">Phone Number:</label>
  <input type="phone_number" name="phone_number" id="phone_number" value="<%= @customer.phone_number %>"/>
</p>
  <input class="form_button" type="submit" value="Update Details" />
